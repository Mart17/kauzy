<h1 class="font-sans break-normal text-gray-900 font-bold text-xl">Politici (<%= @persons.count %>)</h1>
<small>Toto sú veréjne osobnosti, ktoré momentálne evidujeme v našej databáze.</small>

<% @persons.in_groups_of(2, false).each do |group| %>

  <div class="flex">
    <% group.each do |person| %>
      <div class="w-1/2 rounded border border-gray-400 shadow-lg bg-white mt-4 mb-2 m-3 inline-block">
        <div class="flex">
          <div class="w-1/3">
            <img src="<%= person.img_url %>" alt="<%= person.name %>" width="170">
          </div>
          <div class="w-2/3 p-6">
            <h2 class="font-sans break-normal text-gray-900 pb-2 font-bold text-xl"><%= person.name %></h2>
            <p>politik</p>
            <%= link_to 'Zobraziť profil', person_path(person), class: "bg-blue-500 inline-block hover:bg-blue-700 text-white font-bold py-2 px-4 mt-4 rounded" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% end %>